{
  "name": "nat-ui",
  "version": "0.1.0",
  "description": "Framework-agnostic UI components",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.js",
      "require": "./loader/index.cjs.js"
    },
    "./dist/nat-ui/nat-ui.css": "./dist/nat-ui/nat-ui.css"
  },
  "files": [
    "dist/",
    "loader/",
    "LICENSE",
    "NOTICE",
    "README.md"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "serve": "stencil build --dev --watch --serve",
    "test": "stencil test --spec",
    "test.watch": "stencil test --spec --watchAll",
    "test.e2e": "stencil test --e2e",
    "test.coverage": "stencil test --spec --coverage",
    "generate": "stencil generate",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@stencil/core": "^4.38.0",
    "@types/jest": "^30.0.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuongna/nat-ui.git"
  }
}
